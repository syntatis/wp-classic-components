{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [
			"DOM",
			"ESNext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"modules/*"
			]
		}
	},
	"include": [
		"**/*.mts",
		"**/*.ts",
		"**/*.tsx",
		"*.d.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
