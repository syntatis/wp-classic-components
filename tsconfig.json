{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [
			"DOM",
			"ESNext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,
		"baseUrl": "."
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"*.d.ts",
		"vitest.config.mts",
	],
	"exclude": [
		"node_modules",
		"dist"
	],
	"types": [
		"vitest/globals"
	],
}
