  "type": "module",
  "engines": {
    "node": "^20",
    "npm": ">=10"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@storybook/addon-a11y": "^8.0.0",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/addon-mdx-gfm": "^8.0.0",
    "@storybook/addon-themes": "^8.0.5",
    "@storybook/blocks": "^8.0.0",
    "@storybook/manager-api": "^8.0.0",
    "@storybook/react": "^8.0.0",
    "@storybook/react-vite": "^8.0.0",
    "@storybook/test": "^8.0.0",
    "@storybook/theming": "^8.0.0",
    "@syntatis/eslint-config": "^0.1.4",
    "@syntatis/stylelint-config": "^0.1.4",
    "@syntatis/wp-classic-components": "file:./packages/wp-classic-components",
    "@testing-library/jest-dom": "^6.3.0",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-istanbul": "^1.3.1",
    "@wordpress/icons": "^9.41.0",
    "chromatic": "^11.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-storybook": "^0.8.0",
    "jsdom": "^24.0.0",
    "lerna": "^8.0.0",
    "prettier": "^3.2.4",
    "sass": "^1.70.0",
    "storybook": "^8.0.0",
    "stylelint": "^16.2.0",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.2.1"
  },
  "scripts": {
    "build:storybook": "storybook build",
    "build": "npm run build -w @syntatis/wp-classic-components",
    "chromatic": "chromatic --build-script-name=build:storybook",
    "fmt:scripts": "eslint . --fix",
    "fmt:styles": "stylelint '**/*.scss' --fix",
    "fmt": "npm run fmt:scripts && npm run fmt:styles",
    "lint:scripts": "eslint .",
    "lint:styles": "stylelint '**/*.scss'",
    "lint:types": "tsc --noEmit",
    "lint": "npm run lint:scripts && npm run lint:styles && npm run lint:types",
    "storybook": "storybook dev -p 6007",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  }
